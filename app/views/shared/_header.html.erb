<header>
  <nav class='navbar navbar-expand-lg navigation' style='background-color: #A9907E'>

    <!-- WEBアプリロゴ -->
    <%= link_to '/', class: 'navbar-brand ms-3' do %>
    <%= image_tag 'logo.png' %>
    <% end %>

    <!-- 検索フォーム & リセットボタンを横並び -->
    <div class="container d-flex flex-row align-items-center justify-content-start">
      <!-- 検索フォーム -->
      <div class="w-auto">
        <%= render 'shared/search_form', url: bagel_shops_path, q: @q %>
      </div>

      <!-- リセットボタン -->
      <div>
        <%= link_to bagel_shops_path(reset: true), class: 'btn btn-reset btn-lg p-2 ms-2' do %>
        <i class=" fa-solid fa-rotate-right"></i> リセット
        <% end %>
      </div>
    </div>

    <%
=begin%>
    <!-- トグルボタンの設定 -->
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <!-- リンク先 -->
    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <!-- アカウント登録 -->
        <li class='nav-item me-3'>
          <%= link_to 'アカウント登録', '#', class: 'nav-link link_text me-3' %>
        </li>
        <!-- ログイン -->
        <li class='nav-item'>
          <%= link_to 'ログイン', '/', class: 'nav-link btn btn-reverse me-3' %>
        </li>
      </ul>
    </div>
    <%
=end%>
  </nav>
</header>
